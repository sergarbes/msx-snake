100 ' SOFTWARE SPRITES SNAKE EXAMPLE
100 COLOR 15,1,1
110 SCREEN 2,0,0

120 DEFINT A-Z
130 X=96: Y=96
131 DI=0

140 FOR I=0 TO 95
150     READ A$:A=VAL("&H"+A$)
160     ' TILES 1/3, 2/3, 3/3
160     VPOKE I,A
161     VPOKE &H00800+I,A
162     VPOKE &H01000+I,A
170     ' COLORS 1/3, 2/3, 3/3
170     VPOKE &H2000+I,&HF0
171     VPOKE &H2800+I,&HF0
172     VPOKE &H3000+I,&HF0
190 NEXT I

200 ' GAME LOOP

200 S=STICK(0)
250 IF S=1 OR DI=1 THEN DI=1: Y=Y-8
260 IF S=3 OR DI=3 THEN DI=3: X=X+8
270 IF S=5 OR DI=5 THEN DI=5: Y=Y+8
280 IF S=7 OR DI=7 THEN DI=7: X=X-8

290 TIME=0
300 IF TIME<3 GOTO 300

320 C=X\8
321 D=Y\8

500 ' MOVIMENT CAP A DALT
510 'VPOKE &H1800+C+D*32,0
520 'VPOKE &H1800+C+(D+1)*32,1
530 'VPOKE &H1800+C+(D+2)*32,2

540 ' ERASE TAIL
550 'VPOKE &H1800+C+(D+3)*32,12

600 ' MOVIMENT CAP A LA DRETA
610 'VPOKE &H1800+C+D*32,  3
620 'VPOKE &H1800+(C-1)+D*32,4
630 'VPOKE &H1800+(C-2)+D*32,5

640 ' ERASE TAIL
650 'VPOKE &H1800+(C-3)+D*32,12

700 ' MOVIMENT CAP A BAIX
710 'VPOKE &H1800+C+D*32,  6
720 'VPOKE &H1800+C+(D-1)*32,7
730 'VPOKE &H1800+C+(D-2)*32,8

740 ' ERASE TAIL
750 'VPOKE &H1800+C+(D-3)*32,12

800 ' MOVIMENT CAP A L'ESQUERRA
810 VPOKE &H1800+C+D*32,  9
820 VPOKE &H1800+(C+1)+D*32,10
830 VPOKE &H1800+(C+2)+D*32,11

840 ' ERASE TAIL
850 VPOKE &H1800+(C+3)+D*32,12

1000 GOTO 200

1050 ' UP
1050 DATA 00,00,24,7E,5A,FF,FF,FF
1060 DATA FF,FF,FF,FF,FF,FF,FF,FF
1070 DATA FF,FF,7E,7E,3C,3C,18,18

1090 ' RIGHT
1090 DATA E0,F8,EC,F8,F8,EC,F8,E0
1100 DATA FF,FF,FF,FF,FF,FF,FF,FF
1110 DATA 03,0F,3F,FF,FF,3F,0F,03

1130 ' DOWN
1130 DATA FF,FF,FF,5A,7E,24,00,00
1140 DATA FF,FF,FF,FF,FF,FF,FF,FF
1150 DATA 18,18,3C,3C,7E,7E,FF,FF

1170 ' LEFT
1170 DATA 07,1F,37,1F,1F,37,1F,07
1180 DATA FF,FF,FF,FF,FF,FF,FF,FF
1190 DATA C0,F0,FC,FF,FF,FC,F0,C0
